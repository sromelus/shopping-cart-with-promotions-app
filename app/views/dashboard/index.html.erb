<div class="dashboard-container">
  <!-- Header with user info and cart -->
  <header class="dashboard-header">
    <div class="user-welcome">
      <h1>Welcome, <%= current_user.name %></h1>
    </div>
    <div class="cart-widget">
      <%= link_to user_cart_items_path, class: "cart-link" do %>
        <i class="cart-icon">üõí</i>
        <span>View Cart</span>
        <span class="cart-count"><%= current_user_cart.cart_items.count %></span>
      <% end %>
    </div>
  </header>

  <!-- Main content -->
  <main class="main-content">
    <section class="items-section">
      <h2 class="section-title">Browse items for Sale</h2>
      <p class="section-subtitle">Discover amazing products at great prices</p>

      <div class="items-grid">
        <% @items.each do |item| %>
          <div class="item-card">
            <div class="item-header">
              <h3 class="item-name"><%= item.name %></h3>
              <% if item.promotion %>
                <div class="discount-badge">
                  <%= item.promotion.discount_type == "flat_fee_discount" ? "$" : "" %><%= item.discount_amount %><%= item.promotion.discount_type == "flat_fee_discount" ? " OFF" : "% OFF" %>
                </div>
              <% end %>
            </div>

            <div class="item-meta">
              <div class="meta-item">
                <i class="meta-icon">üè∑Ô∏è</i>
                <span class="meta-label">Brand:</span>
                <span class="meta-value"><%= item.brand&.name %></span>
              </div>

              <div class="meta-item">
                <i class="meta-icon">üìÅ</i>
                <span class="meta-label">Category:</span>
                <span class="meta-value"><%= item.category&.name %></span>
              </div>

              <div class="meta-item">
                <span class="meta-label">Sold by:</span>
                <span class="meta-value"><%= item.sold_by %></span> 
              </div>

              <% if item.weight? %>
                <div class="meta-item">
                  <span class="meta-label">Unit:</span>
                  <span class="meta-value"><%= item.unit_weight %> <%= item.unit_weight_label&.humanize %></span>
                </div>
              <% end %>
            </div>

            <div class="price-section">
              <div class="current-price"><%= item.display_promotional_price %></div>

              <% if item.promotion %>
                <div class="original-price"><%= item.original_price %></div>
              <% end %>
            </div>

            <div class="item-actions">
              <%= form_with url: user_cart_items_path(current_user_cart), method: :post, class: "add-to-cart-form" do %>
                <%= hidden_field_tag :item_id, item.id %>
                <%= submit_tag "üõí Add to Cart", class: "add-to-cart-btn" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </section>
  </main>
</div>